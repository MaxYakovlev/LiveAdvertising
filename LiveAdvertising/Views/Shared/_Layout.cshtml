<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="~/images/logo32.png" type="image/x-icon">
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
</head>
<body>
    <div id="header">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-white">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo64.png" width="42" height="42" alt="logo">
                    <h3>Live Advertising</h3>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto"></ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Stream" asp-action="MyStreams" class="btn btn-outline-primary my-2 my-sm-0 mr-sm-2" role="button" aria-pressed="true">Мои стримы</a>
                        <a asp-controller="Stream" asp-action="Create" class="btn btn-outline-success my-2 my-sm-0 mr-sm-2" role="button" aria-pressed="true">Создать стрим</a>
                        <a asp-controller="Account" asp-action="SignOut" class="btn btn-outline-danger my-2 my-sm-0" role="button" aria-pressed="true">Выйти</a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-success my-2 my-sm-0 mr-sm-2" role="button" aria-pressed="true">Вход</a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary my-2 my-sm-0" role="button" aria-pressed="true">Регистрация</a>
                    }
                </div>
            </nav>
        </div>
    </div>

    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous"></script>
</body>
</html>