@model LiveAdvertising.Models.Dto.StreamInfoDto

@{ ViewBag.Title = Model.StreamTitle;
                Layout = null; }

<link rel="shortcut icon" href="~/images/logo32.png" type="image/x-icon">
<title>@ViewBag.Title</title>

<link rel="stylesheet" href="~/css/watch.css" asp-append-version="true" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">
<link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css">

<div class="container-fluid p-0">
    <div class="row">
        <div class="col-lg-8">
            <iframe class="iframe-stream" width="100%" src="https://www.youtube.com/embed/@Model.GetSourceId()?autoplay=1" frameborder="0" allow="accelerometer;autoplay;clipboard-write;encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <div id="close-wrapper">
                @if (User.Identity.IsAuthenticated && User.Identity.Name == Model.ShopName)
                {
                    <button class="btn btn-danger" id="close">Завершить</button>
                 }
                <a asp-action="Index" asp-controller="Home" class="btn btn-success" id="to-index">На главную</a>
                <button class="btn btn-primary" id="copy-link">Копировать ссылку</button>
            </div>
        </div>
        <!-- Tabs navs -->
        <div class="col-lg-4">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><i class="fa fa-weixin"></i> Чат</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false"><i class="fa fa-list-alt"></i> Товары</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="position-relative">
                        <div id="chat-messages" class="p-4">
                            @foreach (var msg in Model.Messages)
                            {
                                if (msg.isAnswer)
                                {
                                    <div class="chat-message-left mb-4">
                                        <div>
                                            <img src="~/images/default_avatar.jpg" class="rounded-circle mr-1" width="40" height="40">
                                            <div class="text-muted small text-nowrap mt-2">@msg.Time</div>
                                        </div>
                                        <div class="bg-light rounded py-2 px-3 ml-3">
                                            <div class="font-weight-bold mb-1" style="color: red;">Магазин</div>
                                            @msg.Text
                                        </div>
                                    </div> 
                                }
                                else
                                {
                                    <div class="chat-message-left mb-4">
                                        <div>
                                            <img src="~/images/default_avatar.jpg" class="rounded-circle mr-1" width="40" height="40">
                                            <div class="text-muted small text-nowrap mt-2">@msg.Time</div>
                                        </div>
                                        <div class="bg-light rounded py-2 px-3 ml-3">
                                            <div class="font-weight-bold mb-1">Зритель</div>
                                            @msg.Text
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <div class="py-3 px-4 border-top">
                        <div class="input-group">
                            <textarea id="message" rows="3" class="form-control message-area" placeholder="Сообщение"></textarea>
                            @if (User.Identity.IsAuthenticated && User.Identity.Name == Model.ShopName)
                            {
                                <button id="shop-send-button" class="btn btn-danger ml-2 send-button">Отправить</button> 
                            }
                            else
                            {
                                <button id="user-send-button" class="btn btn-primary ml-2 send-button">Отправить</button>
                            }
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <!--Товары-->
                    <div id="products">
                        @foreach (var offer in Model.GetCatalog().Shops[0].Offers)
                        {
                            @if (offer.Price != null)
                            {
                                <div class="card" id="@offer.Id">
                                    <div class="row">
                                        <div class="col-4">
                                            <img class="product-img" src="@offer.Image">
                                        </div>
                                        <div class="col-8">
                                        <div class="card-body">
                                        <h5 class="card-title">@offer.Name</h5>
                                         @if (offer.Params != null)
                                        {
                                        <div class="card-text">
                                         @foreach (var param in offer.Params)
                                        {
                                            <b>@param.Name:</b> @param.Value <br />
                                        }
                                 </div>
                              }
                                    <div class="price-text">@offer.Price @offer.CurrencyId</div>
                                    <button class="btn btn-primary btn-add-to-basket"><i class="fa fa-shopping-cart"></i> Добавить в корзину</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                     }
                    </div>
                    <button class="btn btn-success mt-2 buy-button"><i class="fa fa-external-link"></i> Купить</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('#myTab li:last-child a').tab('show')
    })
</script>

<script src="~/js/basket.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous"></script>


<script src="~/js/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/chat.js" asp-append-version="true"></script>