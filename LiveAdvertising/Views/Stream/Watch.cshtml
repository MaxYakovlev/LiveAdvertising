@model LiveAdvertising.Models.Dto.StreamInfoDto

@{
    ViewBag.Title = "Стрим";
    Layout = null;
}

<link rel="stylesheet" href="~/css/watch.css" asp-append-version="true" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">

<div class="container-fluid p-0">
    <div class="row">
        <div class="col-lg-8">
            <iframe class="iframe-stream" width="100%" height="710px" src="https://www.youtube.com/embed/@Model.GetSourceId()?autoplay=1" frameborder="0" allow="accelerometer;autoplay;clipboard-write;encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <!-- Tabs navs -->
        <div class="col-lg-4">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Чат</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Товары</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="messages-tab" data-toggle="tab" href="#messages" role="tab" aria-controls="messages" aria-selected="false">Корзина</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="h3 mb-3 mt-2">Чат</div>
                    <div class="position-relative">
                        <div class="chat-messages p-4">
                            <div class="chat-message-left mb-4">
                                <div>
                                    <img src="~/images/default_avatar.jpg" class="rounded-circle mr-1" width="40" height="40">
                                    <div class="text-muted small text-nowrap mt-2">16:20</div>
                                </div>
                                <div class="bg-light rounded py-2 px-3 ml-3">
