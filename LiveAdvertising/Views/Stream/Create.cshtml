@model LiveAdvertising.Models.Dto.StreamDto

@{
    ViewBag.Title = "Создание стрима";
}

<link rel="stylesheet" href="~/css/create.css" asp-append-version="true"/>

<div class="container">
    <div class="row">
        <form asp-controller="Stream" asp-action="Create" method="post" id="create-form" enctype="multipart/form-data">
            <h2 class="card-title mt-3 text-center">Создание стрима</h2>
            <div class="form-group">
                <div id="errors" asp-validation-summary="@ValidationSummary.All"></div>
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Название стрима</label>
                <input asp-for="@Model.Title" class="form-control" type="text" required>
            </div>
            <div class="mb-3">
                <label for="source" class="form-label">Ссылка на ютуб трансляцию</label>
                <input asp-for="@Model.Source" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="file" class="form-label">Загрузите файл</label>
                <input asp-for="@Model.ProductsFile" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Создать</button>
        </form>
    </div>
</div>